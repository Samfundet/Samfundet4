# http://editorconfig.org
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8

[*.{html,haml}]
indent_size = 2

[*.{css,less,scss}]
indent_size = 2

[*.{jsx,js,json}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[.eslintrc]
indent_size = 2
